<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.jetpackcomposeplayground">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackComposePlayground"
        tools:targetApi="31">
        <activity
            android:name=".YogaActivity"
            android:exported="true"
            android:label="@string/title_activity_yoga"
            android:theme="@style/Theme.JetpackComposePlayground" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SuperheroActivity"
            android:exported="true"
            android:label="@string/activity_name_superheroes"
            android:theme="@style/Theme.JetpackComposePlayground">
        </activity>
        <activity
            android:name=".DogListActivity"
            android:exported="true"
            android:label="@string/title_activity_dog_list"
            android:theme="@style/Theme.JetpackComposePlayground" />
        <activity
            android:name=".TopicListActivity"
            android:exported="true"
            android:label="@string/title_activity_topic_list"
            android:theme="@style/Theme.JetpackComposePlayground" />
        <activity
            android:name=".BusinessCardActivity"
            android:exported="false"
            android:label="@string/title_activity_business_card"
            android:theme="@style/Theme.JetpackComposePlayground" />
        <activity
            android:name=".DiceRoller"
            android:exported="true"
            android:label="@string/title_activity_dice_roller"
            android:theme="@style/Theme.JetpackComposePlayground" />
        <activity
            android:name=".MakeLemonadeActivity"
            android:exported="false"
            android:label="@string/title_activity_lemonade"
            android:theme="@style/Theme.JetpackComposePlayground" />
        <activity
            android:name=".TipCalculatorActivity"
            android:exported="true"
            android:label="@string/title_activity_tip_calculator"
            android:theme="@style/Theme.JetpackComposePlayground" />
        <activity
            android:name=".AffirmationsActivity"
            android:exported="true"
            android:label="@string/title_activity_affirmations"
            android:theme="@style/Theme.JetpackComposePlayground" />
    </application>

</manifest>